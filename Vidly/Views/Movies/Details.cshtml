@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@if (!string.IsNullOrWhiteSpace(Model.CoverUrl))
{
    <img width="200" height="300" src="@Url.Content(Model.CoverUrl)" alt="@Model.Name"/>
}
else
{
    <p>No image found</p>
}

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.ToShortDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>